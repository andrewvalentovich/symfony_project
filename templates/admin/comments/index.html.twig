{% extends 'base_content.html.twig' %}

{% block title %}Управление Комментариями{% endblock %}

{% block base_row_class %} {{ parent() }} position-relative rounded-lg overflow-hidden {% endblock %}
{% block base_col_class %} {{ parent() }} {% endblock %}
{% block content %}
    <h1>Управление комментариями</h1>

    <form>
        <div class="input-group mb-3">
            <input type="text"
                   name="q"
                   class="form-control"
                   placeholder="Найти..."
                   value="{{ app.request.query.get('q') }}"
            >
            <div class="input-group-append">
                <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
            </div>
        </div>
        <div class="form-check">
            <input type="checkbox"
                   class="form-check-input"
                   id="showDeleted"
                   name="showDeleted"
                    {% if app.request.query.has('showDeleted') %} checked {% endif %}
            >
            <label class="form-check-label" for="showDeleted">Show DELETED comments</label>
        </div>
    </form>


    <table class="table table-striped">
        <thead>
        <tr>
            <th>Статья</th>
            <th>Автор</th>
            <th>Комментарий</th>
            <th>Дата</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>
                    <a href="#">
                        {{ comment.article.title }}
                    </a>
                </td>
                <td>{{ comment.authorName }}</td>
                <td style="width: 20%;">{{ comment.content|u.truncate(40, '...') }}</td>
                <td>{% if comment.deletedAt %}DELETED {% endif %}{{ comment.createdAt|ago }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Нет комментариев</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}